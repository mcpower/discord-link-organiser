{
  "compilerOptions": {
    // Taken from https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "./build",

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // Needed for ts-morph
    "declaration": true,

    "importHelpers": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["index.ts", "src/**/*.ts"]
}
